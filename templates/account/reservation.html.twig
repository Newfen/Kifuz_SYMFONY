{% extends 'base.html.twig' %}

{% block body %}
	<div class="account-container mt-5">
		<div class="menu-account">
			<div>
				<h3>{{ user.lastname }} {{ user.firstname }}</h3>
				<a href="{{path('app_logout')}}">Se déconnecter</a>
			</div>
			<div>
				<a href="{{path('app_account')}}"><img src="/assets/profile.png">
					Informations personnelles</a>
			</div>
			<div>
				<a href="#" class=""><img src="/assets/history.png">
					Historique des réservations</a>
			</div>
		</div>

		<div>
			<div class="d-flex justify-content-between">
				<h4>Historique de mes réservations</h4>
			</div>

			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Atelier</th>
						<th scope="col">Réserver pour le</th>
						<th scope="col">Nombre de participant</th>
						<th scope="col">Prix</th>
					</tr>
				</thead>
				<tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.programmation.atelier.category.categoryname }}</td>
                            <td>{{ reservation.programmation.creneau.jourFormat }}</td>
                            <td>{{ reservation.nbParticipant }}</td>
                            <td>{{ reservation.programmation.atelier.price * reservation.nbParticipant }} EUR</td>
                        </tr>
                    {% endfor %}
				</tbody>
			</table>
		</div>

	</div>

	<div class="footer-margin"></div>

{% endblock %}
