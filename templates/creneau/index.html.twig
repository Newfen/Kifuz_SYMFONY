{% extends 'base_admin.html.twig' %}

{% block body %}

	<div class="left-margin-admin">
	<a href="{{path('add_creneau')}}"><button type="submit" class="btn btn-lg btn-primary mb-2 float-right">Ajouter</button></a>

	<table class="table table-striped table-hover" id="atelier-tableau">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Créneau</th>
				<th scope="col">Nombre de place</th>
				<th scope="col">Editer</th>
				<th scope="col">Supprimer</th>
			</tr>
		</thead>
		<tbody>
            {% for creneau in creneaux %}
                <tr>
                    <td>{{ creneau.id }}</td>
                    <td>{{ creneau.horaire|date("d/m/Y/ à H:i:s") }}</td>
                    <td>{{ creneau.nbplace }}</td>
                    <td><a href="{{ path('update_creneau', {'id' : creneau.id}) }}"><img class="admin-imgg" src="/assets/edit.png"></a></td>
                    <td><a href="{{ path('delete_creneau', {'id' : creneau.id}) }}"><img class="admin-imgg" src="/assets/trash.png"></a></td>
                </tr>
            {% endfor %}
		</tbody>
	</table>
	</div>
{% endblock %}
