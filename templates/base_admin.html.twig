<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<link rel="stylesheet" href="{{ asset('css/atelier.css') }}">
			<link rel="stylesheet" href="{{ asset('css/cart.css') }}">
			<link rel="stylesheet" href="{{ asset('css/admin_css/base_admin.css') }}">
			<link rel="stylesheet" href="{{ asset('css/admin_css/atelier_admin.css') }}">

			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		<div class="admin-container">

			<header class="side-header">
				<a href="{{path('app_home')}}"><< Retour au site</a>
				<nav class="navigation_admin">
					<div class="menu-title">Gestion des Entités</div>
					<ul class="menu-admin">
						<li>
							<a href="{{path('app_category')}}">Catégorie</a>
						</li>
						<li>
							<a href="{{path('app_admin_atelier')}}">Atelier</a>
						</li>
						<li>
							<a href="{{path('app_creneau')}}">Créneau</a>
						</li>
						<li>
							<a href="{{path('app_programmation')}}">Programmation</a>
						</li>
					</ul>
				</nav>

				<nav class="navigation_admin">
					<div class="menu-title">Historique</div>
					<ul class="menu-admin">
						<li>
							<a href="{{path('app_admin_reservation')}}">Réservation</a>
						</li>
					</ul>
				</nav>
			</header>

			<div class="admin-block"> {% block body %}{% endblock %} </div>

		</div>
			
	</body>
	</html>
