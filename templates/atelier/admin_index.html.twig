{% extends 'base_admin.html.twig' %}

{% block body %}

<div class="left-margin-admin"> 
		<a href="{{path('add_atelier')}}"><button type="submit" class="btn btn-lg btn-primary mb-2 float-right">Ajouter</button></a>
		
	<table class="table table-striped table-hover" id="atelier-tableau">
		<thead>
			<tr>
				<th scope="col">Titre</th>
				<th scope="col">Description</th>
				<th scope="col">Prix</th>
				<th scope="col">Image/s</th>
				<th scope="col">Editer</th>
				<th scope="col">Supprimer</th>
			</tr>
		</thead>
		<tbody>
            {% for atelier in ateliers %}
                <tr>
                    <td>{{ atelier.title }}</td>
                    <td>{{ atelier.description }}</td>
                    <td>{{ atelier.price }} EUR</td>
                    <td>img</td>
                    <td><a href="{{ path('update_atelier', {'id' : atelier.id}) }}"><img class="admin-imgg" src="/assets/edit.png"></a></td>
                    <td><a href="{{ path('delete_atelier', {'id' : atelier.id}) }}"><img class="admin-imgg" src="/assets/trash.png"></a></td>
                </tr>
            {% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}
