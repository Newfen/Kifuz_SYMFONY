{% extends 'base_admin.html.twig' %}

{% block body %}

	<div class="left-margin-admin">
	<a href="{{path('add_category')}}">
		<button type="submit" class="btn btn-lg btn-primary mb-2 float-right">Ajouter</button>
	</a>

	<table class="table table-striped table-hover" id="atelier-tableau">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nom</th>
				<th scope="col">Editer</th>
				<th scope="col">Supprimer</th>
			</tr>
		</thead>
		<tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.CategoryName }}</td>
                    <td>
						<a href="{{ path('update_category', {'id' : category.id}) }}">
							<img class="admin-imgg" src="/assets/edit.png">
						</a>
					</td>
                    <td>
						<a href="{{ path('delete_category', {'id' : category.id}) }}">
							<img class="admin-imgg" src="/assets/trash.png">
						</a>
					</td>
                </tr>
            {% endfor %}
		</tbody>
	</table>
	</div>

{% endblock %}
